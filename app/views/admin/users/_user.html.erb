<% form_for @user, :url => admin_users_path, :html => {:class => "formulario"} do |form| %>  

<%= form.error_messages %>  

  <p>  
    <%= form.label :username, "Nombre de Usuario" %>  
    <%= form.text_field :username, :class => "text" %>  
  </p>  
  <p>  
    <%= form.label :email, "E-mail" %>  
    <%= form.text_field :email, :class => "text" %>  
  </p>  
  <p>  
    <%= form.label :password, "Contraseña" %>  
    <%= form.password_field :password, :class => "text" %>  
  </p>  
  <p>  
    <%= form.label :password_confirmation, "Confirmar Contraseña" %>  
    <%= form.password_field :password_confirmation, :class => "text" %>  
  </p>  
  <p>  
    <%= form.submit "Guardar" %>  
  </p>  
 
<% end %>